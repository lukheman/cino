  <div class="grid grid-cols-1 gap-4 sm:gap-6">
    <% quotes.forEach(quote => { %>
      <div class="bg-white p-4 sm:p-6 rounded-2xl shadow-md hover:shadow-lg active:scale-95 transition-transform duration-200">
        <p class="text-base sm:text-lg italic text-gray-700 mb-2">"<%= quote.content %>"</p>
        <p class="text-xs sm:text-sm text-gray-500 text-right">â€” <%= quote.author || 'Anonymous' %></p>
      </div>
    <% }) %>
  </div>
</div>
