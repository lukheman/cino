<div class="max-w-5xl mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-800">üìú Your Quotes</h1>
    <button
      onclick="openModal('addModal')"
      class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-5 py-2.5 rounded-2xl shadow transition"
    >
      + Add Quote
    </button>
  </div>

  <% if (quotes.length === 0) { %>
    <div class="text-center text-gray-500 italic">You haven‚Äôt written any quotes yet.</div>
  <% } else { %>
    <div class="grid md:grid-cols-2 gap-6">
      <% quotes.forEach((quote) => { %>
        <div class="bg-white rounded-2xl shadow-md p-6 relative">
          <p class="text-gray-700 text-lg italic">‚Äú<%= quote.content %>‚Äù</p>
          <% if (quote.author) { %>
            <p class="text-sm text-gray-500 mt-2">‚Äî <%= quote.author %></p>
          <% } %>

          <div class="absolute top-4 right-4 flex space-x-3">
            <button
              onclick="openEditModal('<%= quote._id %>', `<%= quote.content.replace(/"/g, '&quot;') %>`, `<%= quote.author ? quote.author.replace(/"/g, '&quot;') : '' %>`)"
              class="text-blue-600 hover:underline text-sm"
              title="Edit"
            >
               ‚úèÔ∏è Edit
            </button>
            <form action="/user/dashboard/quote/<%= quote.id %>?_method=DELETE" method="POST">
              <button type="submit" class="text-red-500 hover:underline text-sm" title="Delete">üóëÔ∏è Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<!-- ADD Modal -->
<div id="addModal" class="hidden fixed inset-0 z-50 bg-black bg-opacity-40 flex items-center justify-center">
  <div class="bg-white w-full max-w-md p-6 rounded-2xl shadow-xl space-y-5 relative">
    <h2 class="text-xl font-semibold text-gray-800">‚ûï Add Quote</h2>
    <form action="/user/dashboard/add-quote" method="POST" class="space-y-4">
      <div>
        <label class="block mb-1 text-sm font-medium text-gray-700">Quote</label>
        <textarea name="content" required class="w-full p-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400"></textarea>
      </div>
      <div class="flex justify-end gap-3 mt-4">
        <button type="button" onclick="closeModal('addModal')" class="px-4 py-2 text-gray-600">Cancel</button>
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-xl shadow">Save</button>
      </div>
    </form>
  </div>
</div>

<!-- EDIT Modal -->
<div id="editModal" class="hidden fixed inset-0 z-50 bg-black bg-opacity-40 flex items-center justify-center">
  <div class="bg-white w-full max-w-md p-6 rounded-2xl shadow-xl space-y-5 relative">
    <h2 class="text-xl font-semibold text-gray-800">‚úèÔ∏è Edit Quote</h2>
    <form id="editForm" method="POST" class="space-y-4">
      <input type="hidden" name="_method" value="PUT">
      <div>
        <label class="block mb-1 text-sm font-medium text-gray-700">Quote</label>
        <textarea id="editText" name="text" required class="w-full p-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400"></textarea>
      </div>
      <div>
        <label class="block mb-1 text-sm font-medium text-gray-700">Author</label>
        <input id="editAuthor" name="author" type="text" class="w-full p-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400">
      </div>
      <div class="flex justify-end gap-3 mt-4">
        <button type="button" onclick="closeModal('editModal')" class="px-4 py-2 text-gray-600">Cancel</button>
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-xl shadow">Update</button>
      </div>
    </form>
  </div>
</div>

<script>
  function openModal(id) {
    document.getElementById(id).classList.remove('hidden')
  }

  function closeModal(id) {
    document.getElementById(id).classList.add('hidden')
  }

  function openEditModal(id, text, author) {
    const form = document.getElementById('editForm')
    document.getElementById('editText').value = text
    document.getElementById('editAuthor').value = author
    form.action = `/quotes/${id}?_method=PUT`
    openModal('editModal')
  }
</script>
