<div class="min-h-screen flex items-center justify-center px-2 sm:px-4">
  <div class="max-w-xs sm:max-w-sm mx-auto bg-white p-6 sm:p-8 rounded-2xl shadow-lg">
    <h1 class="text-xl sm:text-2xl font-semibold text-center mb-4 sm:mb-6">Login ki dulu</h1>

    <% if (error) { %>
      <div class="mb-3 sm:mb-4 p-2 sm:p-3 rounded-md bg-red-100 text-red-700 text-xs sm:text-sm">
        <%= error %>
      </div>
    <% } %>

    <form action="/login" method="POST" class="space-y-4 sm:space-y-5">
      <div>
        <label for="username" class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          required
          class="w-full px-3 sm:px-4 py-1.5 sm:py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"
        />
      </div>

      <div>
        <label for="password" class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          required
          class="w-full px-3 sm:px-4 py-1.5 sm:py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"
        />
      </div>

      <button
        type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 active:scale-95 text-white font-medium py-2 sm:py-2 min-h-10 rounded-lg transition-transform duration-200"
      >
        Login
      </button>
    </form>
  </div>
</div>
