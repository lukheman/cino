<section class="section is-flex is-justify-content-center is-align-items-center" style="min-height: 100vh;">
    <div class="box" style="max-width: 400px; width: 100%;">
      <h1 class="title is-4 has-text-centered mb-5">Login ki dulu</h1>

      <% if (error) { %>
        <div class="notification is-danger is-light mb-4">
          <%= error %>
        </div>
      <% } %>

      <form action="/login" method="POST">
        <div class="field">
          <label for="username" class="label is-small">Username</label>
          <div class="control">
            <input
              type="text"
              id="username"
              name="username"
              required
              class="input"
              placeholder="Enter username"
            />
          </div>
        </div>

        <div class="field">
          <label for="password" class="label is-small">Password</label>
          <div class="control">
            <input
              type="password"
              id="password"
              name="password"
              required
              class="input"
              placeholder="Enter password"
            />
          </div>
        </div>

        <div class="field">
          <div class="control">
            <button
              type="submit"
              class="button is-primary is-fullwidth"
            >
              Login
            </button>
          </div>
        </div>
      </form>
    </div>
  </section>
